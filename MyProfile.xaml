<UserControl x:Class="Курсовая_работа2.MyProfile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Курсовая_работа2"
             mc:Ignorable="d" 
             Background="Transparent"
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Background="#18181f">
        <Grid ShowGridLines="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="7*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Личный кабинет" Style="{StaticResource TextBlockInfo}" FontSize="25"
                       Foreground="#18bc84" Margin="0 10 0 0"/>

            <StackPanel Orientation="Vertical" Grid.Row="1">
                <TextBlock Text="{Binding Username}" Style="{StaticResource TextBlockInfo}" HorizontalAlignment="Center" Margin="10 10 0 0"
                           FontSize="20"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
